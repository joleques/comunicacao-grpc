{
  "compilerOptions": {
      "diagnostics": false,
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "sourceMap": false,
      "outDir": "dist",
      "baseUrl": "./src",
      "paths": {
          "*": ["node_modules/", "src/types/"]
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"]
}
